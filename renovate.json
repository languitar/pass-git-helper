{
  "extends": [
    "config:recommended"
  ],
  "pip_requirements": {
    "managerFilePatterns": [
      "/^requirements.*\\.txt$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "node-version: (?<currentValue>.*)"
      ],
      "depNameTemplate": "node-version",
      "datasourceTemplate": "node-version"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
