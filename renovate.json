{
  "extends": [
    "config:base"
  ],
  "pip_requirements": {
    "fileMatch": ["^requirements.*\\.txt$"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.github/.*\\.ya?ml$"],
      "matchStrings": [
        "node-version: (?<currentValue>.*)"
      ],
      "depNameTemplate": "node-version",
      "datasourceTemplate": "node-version"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
